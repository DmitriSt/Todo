{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": false,
    "checkJs": false,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "strict": false,
    "strictNullChecks": false,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
  ],
}